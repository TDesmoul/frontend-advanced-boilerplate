<h1 class= "text-center">Members of Air-BnB team</h1>

<div class="container">
  <div class="row">
    <% data.team_members.each do |member, info| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="new-card-team-member text-center">
          <%= image_tag info.picture, class:"avatar-square-large" %>
          <div class="new-card-team-member-info">
            <h2><%= info.name %></h2>
            <h3><%= info.job %></h3>
            <p><%= info.mail %></p>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
